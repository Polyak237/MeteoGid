<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="492dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:text="Метеогид"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Введите город..."
        android:backgroundTint="@color/white"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/btnSaveCity"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#3E3E3E"
        android:fontFamily="sans-serif-light"
        android:text="Сменить..."
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:iconTint="#FFFFFF" />

    <ImageView
        android:id="@+id/Pogoda"
        android:layout_width="wrap_content"
        android:layout_height="216dp"
        android:layout_below="@+id/city"
        android:layout_marginTop="12dp"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/main" />

    <TextView
        android:id="@+id/Waiting"
        android:layout_width="213dp"
        android:layout_height="112dp"
        android:layout_below="@+id/Pogoda"
        android:layout_alignStart="@+id/Pogoda"
        android:layout_marginStart="19dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:text="Официальный спонсор - vk.com/6anichan"
        android:textAlignment="center" />

    <Button
        android:id="@+id/More"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Pogoda"
        android:layout_alignEnd="@+id/Pogoda"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="19dp"
        android:backgroundTint="#3E3E3E"
        android:fontFamily="sans-serif-light"
        android:text="Подробнее..."
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/TomBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/AftTomBlock"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="22dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:text="Завтра:"
            android:textAlignment="viewStart"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:text="Температура"
            android:textAlignment="textEnd"
            android:textSize="24sp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/AftTomBlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="52dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView6"
            android:layout_marginEnd="5dp"
            android:text="Температура"
            android:textAlignment="textEnd"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="174dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:text="Послезавтра:"
            android:textAlignment="viewStart"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>


</RelativeLayout>